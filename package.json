{
  "name": "schultz-hockey-league",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:vercel": "npm run env:write && npm run prisma:generate && npm run build",
    "start": "npm run prisma:deploy && next start",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "lint-staged": "lint-staged",
    "test": "jest --passWithNoTests",
    "test:watch": "npm run test -- --watch",
    "test:ci": "npm run test -- --runInBand",
    "typecheck": "tsc --noEmit",
    "codegen": "node --loader ts-node/esm codegen.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prisma": "dotenvx run --convention=nextjs -- prisma",
    "prisma:generate": "npm run prisma -- generate",
    "prisma:migrate": "npm run prisma -- migrate dev",
    "prisma:reset": "npm run prisma -- migrate reset",
    "prisma:deploy": "npm run prisma -- migrate deploy",
    "prisma:studio": "npm run prisma -- studio",
    "prepare": "husky",
    "env:write": "node scripts/write-env.mjs"
  },
  "dependencies": {
    "@apollo/client": "^4.0.9",
    "@dotenvx/dotenvx": "^1.51.1",
    "@graphql-tools/schema": "^10.0.27",
    "@heroui/react": "^2.8.5",
    "@heroui/theme": "^2.4.23",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@tailwindcss/postcss": "^4.1.17",
    "effect": "^3.19.3",
    "framer-motion": "^12.23.24",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.16.2",
    "next": "^16.0.7",
    "pg": "^8.16.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-icons": "^5.5.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-resolvers": "^5.1.0",
    "@ngneat/falso": "^8.0.2",
    "@prisma/adapter-better-sqlite3": "^7.0.1",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^16.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-testing-library": "^7.13.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "prisma": "^7.0.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0"
    ],
    "*.{cjs,mjs,cts,mts,ts,tsx,js,jsx,json,md,css}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
